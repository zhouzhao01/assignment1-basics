{
    "exp_name": "transformer_lm_6layer_512d",
    "seed": 42,
    "device": "cuda",

    "model": {
        "vocab_size": 32000,
        "context_length": 128,
        "num_layers": 6,
        "d_model": 512,
        "num_heads": 8,
        "d_ff": 2048,
        "rope_theta": 10000.0
    },

    "training": {
        "epoch": 1,
        "batch_size": 8
    },

    "optimizer": {
        "type": "AdamW",
        "lr": 3e-4,
        "betas": [0.9, 0.999],
        "weight_decay": 0.01,
        "eps": 1e-8
    },

    "lr_scheduler": {
        "type": "CosineAnnealingLR",
        "eta_min": 6e-5
    },

    "data": {
        "train_dataset": "/mnt/aat/zzhao.zhou/cs336_2025/assignment1-basics/data/owt_valid_encodings.npy"
    },

    "checkpoint": {
        "save_dir": "runs",
        "save_every_n_steps": 1000,
        "keep_last_n": 3
    }
}
